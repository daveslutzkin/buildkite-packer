{
   "variables" : {
      "aws_access_key" : "",
      "aws_secret_key" : ""
   },
   "builders" : [
      {
         "secret_key" : "{{user `aws_secret_key`}}",
         "access_key" : "{{user `aws_access_key`}}",
         "ami_name" : "buildkite-agent {{timestamp}}",
         "ssh_username" : "ubuntu",
         "instance_type" : "t1.micro",
         "type" : "amazon-ebs",
         "region" : "us-west-2",
         "source_ami" : "ami-6989a659"
      }
   ],
   "provisioners" : [
      {
         "type" : "shell",
         "inline" : [
            "sleep 30",
            "sudo sh -c 'echo deb https://get.docker.com/ubuntu docker main > /etc/apt/sources.list.d/docker.list'",
            "sudo apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 36A1D7869245C8950F966E92D8576A8BA88D21E9",
            "sudo sh -c 'echo deb https://apt.buildkite.com/buildkite-agent stable main > /etc/apt/sources.list.d/buildkite-agent.list'",
            "sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 32A37959C2FA5C3C99EFBC32A79206696452D198",
            "sleep 3",
            "sudo apt-get update",
            "sudo apt-get install -y -q lxc-docker buildkite-agent",
            "sudo usermod -aG docker ubuntu"
         ]
      }
   ]
}
